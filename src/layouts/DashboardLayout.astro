---
import { slide } from "astro:transitions";
import Layout from "./Layout.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <header>
    <nav>
      <ul>
        <li>
          <h1>lofextra (beta)</h1>
        </li>
      </ul>

      <ul>
        <li>
          <a href="/dashboard">dashboard</a>
        </li>

        <li>
          <a href="/dashboard/statistics">statistics</a>
        </li>

        <li>
          <a href="/dashboard/categories">categories</a>
        </li>

        <li>
          <a href="/dashboard/account">account</a>
        </li>
      </ul>
    </nav>
  </header>

  <main transition:animate={slide({ duration: 300 })}>
    <slot />
  </main>
</Layout>

<style>
  main {
    flex: 1;
    overflow-y: scroll;
    padding: 0;
    display: flex;
    flex-direction: column;
  }
</style>
